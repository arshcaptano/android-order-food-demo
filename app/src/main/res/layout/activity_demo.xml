                        <!--android:textStyle="bold"-->
                        <!--app:layout_constraintBottom_toBottomOf="@+id/ivsaq"-->
                        <!--app:layout_constraintStart_toEndOf="@+id/ivsaq"-->
                        <!--app:layout_constraintTop_toTopOf="@+id/ivsaq" />-->

                    <TextView
                    android:id="@+id/textView12qa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="152dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="152dp"
                    android:fontFamily="@font/xpressive_regular"
                    android:text="KES 250"
                    android:textColor="@color/cG5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btaddm"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/v_fill"
                    android:drawableEnd="@drawable/bm_add"
                    android:drawableRight="@drawable/bm_add"
                    android:gravity="center"
                    android:text="ADD"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/accentDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.733" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

